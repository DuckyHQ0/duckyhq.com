---
import "../styles/base.css";
import "@fontsource-variable/outfit";
import Nav from "../components/Nav";
import Footer from "../components/Footer.astro";

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="overflow-x-hidden">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta property="og:title" content="Alive" />
    <meta property="og:description" content="Website for Alive" />
    <meta property="og:image" content="/social-banner.png" />
    <link rel="icon" href="/favicon.ico" type="image/x-icon" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body
    class="bg-bg-1 text-text-1 flex flex-col items-center w-screen gap-12 p-24 max-[800px]:p-12"
  >
    <Nav client:load />
    <main class="flex flex-col gap-12 max-w-[1000px] w-full min-h-screen">
      <slot />
      <Footer />
    </main>
  </body>
</html>
